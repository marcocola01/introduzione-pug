doctype html
html
 head
   title #{title}
   link(rel='stylesheet', href='/css/style.css')
   meta(name="viewport" content="width=device-width, initial-scale=1")
 body
   header.header
         h1 #{title}
   article.container
     each m in modello
       div.person
         div.m-image(style=`background: url('/images/${m.imgSrc}') top center no-repeat; background-size: cover;`)
         h2.m-name
           | #{m.firstname} #{m.lastname}
         a(href=`/profile?id=${m.SetNumber}`)
